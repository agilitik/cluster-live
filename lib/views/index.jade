h2 Master
#master

h2 Workers
#workers

script#master-template(type='text/template')
  .stats
    span.stat.restarts
      strong restarts
      em {master.stats.restarts}
    span.stat.cpus
      strong workers / cpus
      em {master.workers} / {master.os.cpus}
    span.stat.workers
      strong workers
      em spawned {master.stats.workersSpawned}, 
      em deaths {master.stats.workersKilled}

script#worker-template(type='text/template')
  .worker
    .summary
      span.id {worker.id}
      .stats
        span.stat.connections.active 
          strong connections
          em {worker.stats.connectionsActive}
        span.stat.connections.total 
          strong total
          em {worker.stats.connectionsTotal}
        span.stat.requests.total
          strong requests
          em {worker.stats.requestsTotal}
    .body
      .chart

script#request-template(type='text/template')
  span.method {request.method}
  span.url {request.url}

script#notification-template(type='text/template')
  span.message {notification.message}