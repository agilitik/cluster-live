
@import 'vendor'
@import 'buttons'

// colors

blue = #19B2E0
mid = #a7a7a7
light = #e5e5e5
dark = #626262

// mixins

border()
  border 1px solid light

absolute(pos...)
  position absolute
  {pos[0]} pos[1]
  {pos[2]} pos[3]

// styles

html
  border-top 5px solid light

body
  margin 0
  padding 50px
  font 14px/1.4 'Helvetica Neue', Helvetica, Arial Geneva, sans-serif
  border-top 1px solid darken(light, 10%)
  color mid

h1, h2, h3
  margin 10px 0
  color darken(dark, 30%)

h2
  padding-bottom 10px
  border-bottom 1px solid light

button
a.button
input[type='submit']
  cloudapp-button()

.worker
  border()
  position relative
  float left
  margin 5px
  padding 30px
  width 300px
  border-radius 3px
  
  .body
    margin-top 15px

  .summary
    .id
      border()
      background white
      border-top none
      border-left none
      absolute top 0 left 0
      padding 5px 10px
      border-radius 0 0 5px 0
      box-shadow 1px 1px 3px lighten(light, 5%)

    .stats
      absolute top 0 right 0

    .stat.connections
      color #00D0FA

#master
  .stat
    display block
    width 100%
    padding 2px 0

.stats
  font-size 12px
  font-family arial
  padding-top 5px
  padding-right 10px
  strong
    font-weight normal
    padding 0 5px
    color darken(light, 10%)
  em
    font-style normal
