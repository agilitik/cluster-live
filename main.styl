body {
  padding: 50px 80px;
  font: 14px/1.5 helvetica, arial, sans-serif;
}
p {
  margin: 35px 0;
  width: 600px;
}
a {
  color: #00C3FF;
  text-decoration: none;
  &:hover {
    text-decoration: underline;
  }
}
#screenshot {
  height: 800px;
  width: 850px;
  overflow: hidden;
  -webkit-box-shadow: 0 0 5px 1px #eee;
  img {
    margin-top: -100px;
  }
}